#include <stdio.h>

struct Student {
    int roll;
    char name[30];
    float marks;
};

int main() {
    struct Student s[50];
    int n, i;

    printf("Enter number of students: ");
    scanf("%d", &n);

    // Create Records
    printf("\nEnter details:\n");
    for(i = 0; i < n; i++) {
        printf("\nStudent %d\n", i+1);
        printf("Enter Roll No: ");
        scanf("%d", &s[i].roll);
        printf("Enter Name: ");
        scanf("%s", s[i].name);
        printf("Enter Marks: ");
        scanf("%f", &s[i].marks);
    }

    // Display Records
    printf("\n---- Student Database ----\n");
    printf("Roll\tName\tMarks\n");
    for(i = 0; i < n; i++) {
        printf("%d\t%s\t%.2f\n", s[i].roll, s[i].name, s[i].marks);
    }

    return 0;
}
