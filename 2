#include <stdio.h>
int main() {
    int i, j;
    for(i=1; i<=4; i++) {
        for(j=1; j<=i; j++)
            printf("*");
        printf("\n");
    }
    return 0;
}

#include <stdio.h>
int main() {
    int i, j;
    char ch;
    for(i=1; i<=4; i++) {
        for(j=i; j<4; j++)
            printf(" ");
        for(ch='A'; ch<'A'+i; ch++)
            printf("%c", ch);
        for(ch='A'+i-2; ch>='A'; ch--)
            printf("%c", ch);
        printf("\n");
    }
    return 0;
}
